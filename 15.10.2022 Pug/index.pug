extends layout/main

block variables
    - var title = 'My title'
    - var youAreUsingPug = true

block content
    h1.title Pug - node template engine
    #container.col
      if youAreUsingPug
        p(class=title) You are amazing
      else
        p(class=title) Get on it!
      p.
        Pug is a terse and simple templating language with a
        strong focus on performance and powerful features.